---
interface Props {
    title: string;
    subtitle: string;
    image?: string;
    ctaText?: string;
    ctaLink?: string;
}

const { title, subtitle, image = "/images/hero-new.webp", ctaText, ctaLink } = Astro.props;
---

<section class="relative h-screen min-h-[700px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <!-- Improved Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-transparent to-black/60 z-10"></div>
        <div class="absolute inset-0 bg-dark/20 z-10 mix-blend-multiply"></div>
        
        <!-- Use a placeholder initially or a real image if we have one. Ideally use astro:assets -->
        <img src={image} alt="Hero background" class="w-full h-full object-cover transform scale-105 animate-slow-zoom" />
    </div>

    <!-- Content -->
    <div class="relative z-20 container mx-auto px-4 text-center" data-aos="fade-up" data-aos-duration="1200">
        <div class="inline-block relative">
            <!-- Glassmorphism Card Effect -->
            <!-- Glassmorphism Card Removed for cleaner look -->
            <!-- <div class="absolute -inset-8 bg-white/10 backdrop-blur-sm rounded-3xl -z-10 border border-white/10 shadow-2xl skew-y-1"></div> -->
            
            <h1 class="text-6xl md:text-8xl lg:text-9xl font-luxury font-light italic mb-6 tracking-wide drop-shadow-lg text-white">
                {title}
            </h1>
            <p class="text-xl md:text-2xl font-light mb-10 max-w-2xl mx-auto drop-shadow-md text-white/90 tracking-wide">
                {subtitle}
            </p>
            
            {ctaText && ctaLink && (
                <div class="flex justify-center">
                    <a href={ctaLink} class="group relative px-8 py-4 bg-white/90 text-dark hover:bg-primary hover:text-white rounded-full font-serif text-lg font-medium transition-all duration-500 overflow-hidden shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)] transform hover:-translate-y-1">
                        <span class="relative z-10 flex items-center gap-2">
                            {ctaText}
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform group-hover:translate-x-1 transition-transform duration-300"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
                        </span>
                    </a>
                </div>
            )}
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce z-20 cursor-pointer opacity-80 hover:opacity-100 transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-white drop-shadow-lg"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
    </div>
</section>

<style>
    @keyframes slow-zoom {
        0% { transform: scale(1); }
        100% { transform: scale(1.1); }
    }
    .animate-slow-zoom {
        animation: slow-zoom 20s infinite alternate ease-in-out;
    }
</style>

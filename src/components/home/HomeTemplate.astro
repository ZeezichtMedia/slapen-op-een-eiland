const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} - Kamerik`} description={c.subtitle}>
    <Hero 
        title={c.title} 
        subtitle={c.subtitle} 
        ctaText={c.cta} 
        ctaLink={getRelativeLocaleUrl(lang, 'accommodatie')}
        image="/images/hero-home.webp"
    />

    <!-- USPs Section -->
    <section class="py-20 bg-light">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 -mt-32 relative z-30">
                {c.usps.map((usp, index) => (
                    <FeatureCard 
                        title={usp.title} 
                        description={usp.description} 
                        delay={index * 100}
                    >
                        <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            {index === 0 && <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>}
                            {index === 1 && <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>}
                            {index === 2 && <><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></>}
                        </svg>
                    </FeatureCard>
                ))}
            </div>
        </div>
    </section>
    
    <!-- Intro Section -->
    <section class="py-20">
        <div class="container mx-auto px-4 flex flex-col md:flex-row items-center gap-12">
            <div class="md:w-1/2" data-aos="fade-right">
                <div class="relative rounded-2xl overflow-hidden shadow-xl aspect-[4/3]">
                     <img src="/images/gallery-view.webp" alt="Uitzicht over de polder" class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-700" />
                </div>
            </div>
            <div class="md:w-1/2" data-aos="fade-left">
                <span class="text-primary font-bold uppercase tracking-wider text-sm mb-2 block">{c.introTitle}</span>
                <h2 class="text-3xl md:text-4xl font-bold mb-6 text-dark max-w-lg" set:html={c.welcomeTitle} />
                <p class="text-gray-600 text-lg leading-relaxed mb-6">
                    {c.introText}
                </p>
                <a href={getRelativeLocaleUrl(lang, 'omgeving')} class="text-primary font-semibold hover:text-secondary transition-colors inline-flex items-center gap-2">
                    {c.discoverLink} 
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
                </a>
            </div>
        </div>
    </section>

    <!-- New Sections -->
    <ImpressionGallery lang={lang} />
    
    <Testimonials lang={lang} />
</Layout>

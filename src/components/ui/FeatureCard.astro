---
interface Props {
    title: string;
    description: string;
    icon?: string; // We can pass icon name or slot
    delay?: number;
}

const { title, description, icon, delay = 0 } = Astro.props;
---

<div class="glass p-8 rounded-2xl shadow-sm hover:shadow-md transition-all duration-300 group" data-aos="fade-up" data-aos-delay={delay}>
    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors duration-300 text-primary">
        <slot name="icon">
            <!-- Fallback icon if no slot provided -->
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="16"/><line x1="8" x2="16" y1="12" y2="12"/></svg>
        </slot>
    </div>
    <h3 class="text-xl font-bold mb-3 text-dark group-hover:text-primary transition-colors">{title}</h3>
    <p class="text-gray-600 leading-relaxed">
        {description}
    </p>
</div>

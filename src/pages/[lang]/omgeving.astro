---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/home/Hero.astro';

export function getStaticPaths() {
  return [
    {params: {lang: 'nl'}},
    {params: {lang: 'en'}},
    {params: {lang: 'de'}},
  ];
}

const { lang } = Astro.params;

const content = {
    nl: {
        title: "Omgeving",
        subtitle: "Ontdek het Groene Hart",
        intro: "Kamerik is de ideale uitvalsbasis. Midden in de natuur, maar dichtbij de stad. Of u nu houdt van wandelen, varen of historie, hier vindt u het allemaal.",
        spots: [
            { 
                title: "Kasteel de Haar", 
                dist: "8 km", 
                desc: "Het grootste en meest luxueuze kasteel van Nederland. Dwaal door de wereldberoemde tuinen, ontdek de rijke historie en waan je in een sprookje.",
                image: "/images/surroundings/kasteel-de-haar.jpg" 
            },
            { 
                title: "Buitenplaats Kameryck", 
                dist: "2 km", 
                desc: "Een prachtige locatie midden in het Groene Hart. Geniet van een culinaire lunch of diner bij Restaurant 't Ryck, of sla een balletje op de pitch & putt golfbaan.",
                image: "/images/surroundings/kameryck.webp" 
            },
            { 
                title: "Oortjespad & Kinderboerderij", 
                dist: "1.5 km", 
                desc: "Direct om de hoek vindt u het Oortjespad. Een prachtig natuurgebied met een grote kinderboerderij, wandelroutes en een avontuurlijk blotevoetenpad.",
                image: "/images/surroundings/oortjespad.jpg" 
            },
            { 
                title: "Historisch Woerden", 
                dist: "4 km", 
                desc: "Ontdek de historische vestingstad Woerden. Bezoek het middeleeuwse kasteel, de levendige kaasmarkt of wandel langs de singels.",
                image: "/images/surroundings/kasteel-woerden.jpg" 
            },
            { 
                title: "Boerderij de Boerinn", 
                dist: "3 km", 
                desc: "Voor wie van actie houdt! Ga poldersporten, kanoën door de sloten of geniet van het boerenleven. Een leuk uitje voor het hele gezin.",
                image: "/images/surroundings/boerinn.jpg" 
            }
        ]
    },
    en: {
        title: "Surroundings",
        subtitle: "Discover the Green Heart",
        intro: "Kamerik is the ideal base. In the middle of nature, yet close to the city. Whether you love walking, boating or history, you will find it all here.",
        spots: [
            { 
                title: "De Haar Castle", 
                dist: "8 km", 
                desc: "The largest and most luxurious castle in the Netherlands. Wander through world-famous gardens, discover rich history, and immerse yourself in a fairytale.",
                image: "/images/surroundings/kasteel-de-haar.jpg" 
            },
            { 
                title: "Buitenplaats Kameryck", 
                dist: "2 km", 
                desc: "A stunning location in the heart of the Green Heart. Enjoy a culinary lunch or dinner at Restaurant 't Ryck, or play a round of pitch & putt golf.",
                image: "/images/surroundings/kameryck.webp" 
            },
            { 
                title: "Oortjespad & Petting Zoo", 
                dist: "1.5 km", 
                desc: "Right around the corner you'll find the Oortjespad. A beautiful nature area with a large petting zoo, walking routes, and an adventurous barefoot path.",
                image: "/images/surroundings/oortjespad.jpg" 
            },
            { 
                title: "Historic Woerden", 
                dist: "4 km", 
                desc: "Discover the historic fortified city of Woerden. Visit the medieval castle, the lively cheese market, or stroll along the canals.",
                image: "/images/surroundings/kasteel-woerden.jpg" 
            },
            { 
                title: "Boerderij de Boerinn", 
                dist: "3 km", 
                desc: "For those who love action! Go polder sporting, canoeing through the ditches, or enjoy farm life. A fun outing for the whole family.",
                image: "/images/surroundings/boerinn.jpg" 
            }
        ]
    },
    de: {
        title: "Umgebung",
        subtitle: "Entdecken Sie das Grüne Herz",
        intro: "Kamerik ist der ideale Ausgangspunkt. Mitten in der Natur, aber in der Nähe der Stadt. Ob Sie Wandern, Bootfahren oder Geschichte lieben, hier finden Sie alles.",
        spots: [
            { 
                title: "Schloss De Haar", 
                dist: "8 km", 
                desc: "Das größte und luxuriöseste Schloss der Niederlande. Schlendern Sie durch weltberühmte Gärten, entdecken Sie reiche Geschichte und tauchen Sie ein in ein Märchen.",
                image: "/images/surroundings/kasteel-de-haar.jpg" 
            },
            { 
                title: "Buitenplaats Kameryck", 
                dist: "2 km", 
                desc: "Eine atemberaubende Lage im Herzen des Grünen Herzens. Genießen Sie ein kulinarisches Mittag- oder Abendessen im Restaurant 't Ryck oder spielen Sie eine Runde Pitch & Putt Golf.",
                image: "/images/surroundings/kameryck.webp" 
            },
            { 
                title: "Oortjespad & Streichelzoo", 
                dist: "1.5 km", 
                desc: "Gleich um die Ecke finden Sie den Oortjespad. Ein wunderschönes Naturgebiet mit einem großen Streichelzoo, Wanderwegen und einem abenteuerlichen Barfußpfad.",
                image: "/images/surroundings/oortjespad.jpg" 
            },
            { 
                title: "Historisches Woerden", 
                dist: "4 km", 
                desc: "Entdecken Sie die historische Festungsstadt Woerden. Besuchen Sie das mittelalterliche Schloss, den lebhaften Käsemarkt oder spazieren Sie entlang der Grachten.",
                image: "/images/surroundings/kasteel-woerden.jpg" 
            },
            { 
                title: "Boerderij de Boerinn", 
                dist: "3 km", 
                desc: "Für alle, die Action lieben! Gehen Sie Poldersport treiben, Kanu fahren durch die Gräben oder genießen Sie das Bauernhofleben. Ein Spaß für die ganze Familie.",
                image: "/images/surroundings/boerinn.jpg" 
            }
        ]
    }
};

const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} - Slapen op een Eiland`} description={c.subtitle}>
    <Hero title={c.title} subtitle={c.subtitle} image="/images/surroundings/oortjespad.jpg" />

    <section class="py-20 bg-light">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
                <p class="text-xl text-gray-600 leading-relaxed">{c.intro}</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {c.spots.map((spot, idx) => (
                    <div class="group relative overflow-hidden rounded-2xl shadow-lg bg-white h-96" data-aos="fade-up" data-aos-delay={idx * 100}>
                        <img 
                            src={spot.image} 
                            alt={spot.title} 
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
                        
                        <div class="absolute bottom-0 left-0 right-0 p-8 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                            <div class="flex items-center gap-3 mb-2">
                                <span class="bg-secondary text-white text-xs font-bold px-3 py-1 rounded-full">{spot.dist}</span>
                            </div>
                            <h3 class="text-2xl font-bold text-white mb-2">{spot.title}</h3>
                            <p class="text-gray-200 text-sm leading-relaxed opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-4 group-hover:translate-y-0 delay-100">
                                {spot.desc}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
            
            <div class="mt-20 text-center" data-aos="fade-up">
                 <h3 class="text-2xl font-bold mb-6 text-dark flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                    En nog veel meer...
                 </h3>
                 <p class="text-gray-600">Utrecht en Amsterdam liggen op slechts 30 minuten rijden.</p>
            </div>
        </div>
    </section>
</Layout>

---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/home/Hero.astro';

export function getStaticPaths() {
  return [
    {params: {lang: 'nl'}},
    {params: {lang: 'en'}},
    {params: {lang: 'de'}},
  ];
}

const { lang } = Astro.params;

const content = {
    nl: { title: "Galerij", subtitle: "Een impressie van de sfeer" },
    en: { title: "Gallery", subtitle: "An impression of the atmosphere" },
    de: { title: "Galerie", subtitle: "Ein Eindruck von der Atmosph√§re" }
};

const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} - Slapen op een Eiland`} description={c.subtitle}>
    <Hero title={c.title} subtitle={c.subtitle} />

    <section class="py-20">
        <div class="container mx-auto px-4 text-center text-gray-500">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {[
                    { src: "/images/gallery/image-1.webp", alt: "Sfeerimpressie De Tol", span: "md:col-span-2 md:row-span-2" },
                    { src: "/images/gallery/image-2.webp", alt: "Interieur detail", span: "" },
                    { src: "/images/gallery/image-3.webp", alt: "Zithoek", span: "" },
                    { src: "/images/gallery/image-4.webp", alt: "Uitzicht", span: "md:col-span-2" },
                    { src: "/images/gallery/image-5.webp", alt: "Slaapkamer", span: "" },
                    { src: "/images/gallery/image-6.webp", alt: "Badkamer", span: "" },
                    { src: "/images/gallery/image-7.webp", alt: "Keuken", span: "" },
                    { src: "/images/gallery/image-8.webp", alt: "Omgeving", span: "" },
                    { src: "/images/gallery/image-9.webp", alt: "Terras", span: "md:col-span-2" },
                    { src: "/images/gallery/image-10.webp", alt: "Avondzon", span: "" },
                ].map((img, idx) => (
                    <div class={`relative group overflow-hidden rounded-xl shadow-md ${img.span}`} data-aos="fade-up" data-aos-delay={idx * 50}>
                        <img 
                            src={img.src} 
                            alt={img.alt} 
                            class="w-full h-full object-cover transform duration-700 group-hover:scale-110" 
                        />

                    </div>
                ))}
            </div>
            <p class="mt-8">Meer foto's volgen binnenkort.</p>
        </div>
    </section>
</Layout>

---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/home/Hero.astro';
import ContactForm from '../../components/contact/ContactForm.astro';

export function getStaticPaths() {
  return [
    {params: {lang: 'nl'}},
    {params: {lang: 'en'}},
    {params: {lang: 'de'}},
  ];
}

const { lang } = Astro.params;

const content = {
    nl: {
        title: "Contact",
        subtitle: "Neem direct contact op",
        form: { name: "Naam", email: "E-mailadres", message: "Uw Bericht", submit: "Verstuur Bericht" }
    },
    en: {
        title: "Contact",
        subtitle: "Get in touch",
        form: { name: "Name", email: "Email Address", message: "Your Message", submit: "Send Message" }
    },
    de: {
        title: "Kontakt",
        subtitle: "Nehmen Sie Kontakt auf",
        form: { name: "Name", email: "E-Mail-Adresse", message: "Ihre Nachricht", submit: "Nachricht Senden" }
    }
};

const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} - Slapen op een Eiland`} description={c.subtitle}>
    <Hero title={c.title} subtitle={c.subtitle} image="/images/gallery-exterior-side.webp" />

    <section class="py-20 bg-light">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-16">
                <!-- Info & Map -->
                <div class="lg:w-1/2" data-aos="fade-right">
                    <h2 class="text-3xl font-bold mb-6 text-dark max-w-lg">We horen graag van u</h2>
                    <p class="text-gray-600 mb-8 leading-relaxed">
                        Heeft u vragen over beschikbaarheid of speciale wensen? Stuur ons gerust een berichtje. We reageren doorgaans binnen één dag.
                    </p>
                    
                    <div class="space-y-4 mb-12">
                         <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm text-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                            </div>
                            <span class="font-medium">06-42323835</span>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm text-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                            </div>
                            <span class="font-medium">info@slapenopeeneiland.nl</span>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-sm text-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                            </div>
                            <span class="font-medium">Houtkade 2, 3471 HA Kamerik</span>
                        </div>
                    </div>

                    <!-- Map -->
                    <div class="rounded-2xl overflow-hidden shadow-lg h-[300px] grayscale hover:grayscale-0 transition-all duration-500">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2449.610537084656!2d4.887556076936306!3d52.12658816656515!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c671b56350567f%3A0x6e632836248d6725!2sHoutkade%202%2C%203471%20HA%20Kamerik!5e0!3m2!1snl!2snl!4v1705756000000!5m2!1snl!2snl" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>

                <!-- Form -->
                <div class="lg:w-1/2" data-aos="fade-left">
                    <ContactForm labels={c.form} />
                </div>
            </div>
        </div>
    </section>
</Layout>
